{
    "system_info": {
        "project_name": "Smart Greenhouse Team",
        "last_update": "2025-12-21 03:13:02"
    },

"broker_config": {
    "address":"test.mosquitto.org",
    "port":1883,
    "base_topic":"polito/iot/group8/greenhouse",
    "clientID_prefix": "GHG8_"
},

"services": {
    "catalog": {"url":"http://127.0.0.1:8000/catalog"},
    "thingspeak_adaptor": {"status": "active"},
    "control_brain": {"strategy": "climate_v1"}
},

"field_devices": {
    "sensors": {
        "topic": "/sensors",
        "fields": {
            "temperature": "float",
            "humidity": "float",
            "light": "int",
            "co2": "float",
            "soil_moist": "float",
            "fertility_n": "float",
            "fertility_p": "float",
            "fertility_k": "float"
        }
    },
    "actuators": {
        "topic": "/actuators",
        "list": ["air_con", "light", "shade_cloth", "irrigation", "co2_gen"]
    }
},

"control_strategies": {
    "temperature": {
        "max_threshold": 27.0,
        "min_threshold": 17.0,
        "unit": "Celsius",
        "action_on_high": "air_con_ON",
        "action_on_low": "heater_ON"
    },
    "humidity": {
        "max_threshold": 80.0,
        "min_threshold": 50.0,
        "unit": "%",
        "action_on_high": "air_con_ON",
        "action_on_low": "dehumidifier_ON"
    },
    "light": {
        "max_threshold": 5000,
        "min_threshold": 50,
        "unit": "lux",
        "shade_cloth_threshold": 4500
    },
    "soil_moist": {
        "max_threshold": 80.0,
        "min_threshold": 50.0,
        "unit": "%",
        "max_daily_irrigation": 5
    },
    "fertility": {
        "min_n": 50.0,
        "min_p": 50.0,
        "min_k": 50.0,
        "unit": "mg/kg",
        "action_on_low": "start_fertigation"
    }
}

}


